<% content_for :title, "FAQ Admin" %>
<% content_for :head do %>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<% end %>

<div class="faqs-page">
<div class="page-header text-center">
  <div class="container">
    <h1 class="display-4 fw-bold mb-4">
      <i class="fas fa-question-circle me-2"></i>
      FAQ Management
    </h1>
  </div>
</div>

<div class="main-content">
  <div class="container" data-controller="faqs-admin">
    <div id="adminMode" class="mode-content">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
          <i class="fas fa-cogs me-2"></i>
          Amministrazione FAQ
        </h2>

        <div class="d-flex gap-2">
          <button type="button" class="btn btn-success" data-action="click->faqs-admin#openAddForm">
            <i class="fas fa-plus me-2"></i>
            Aggiungi FAQ
          </button>

          <button
            type="button"
            class="btn btn-outline-primary"
            data-bs-toggle="modal"
            data-bs-target="#faqCategoryModal"
            title="Gestisci categorie"
          >
            <i class="fas fa-tags me-2"></i>
            Categorie
          </button>
        </div>
      </div>

      <div id="faq-form" class="card mb-4" style="display: none;">
        <div class="card-header">
          <h5 class="mb-0" id="form-title">
            <i class="fas fa-plus me-2"></i>
            Nuova FAQ
          </h5>
        </div>

        <div class="card-body">
          <form id="faq-form-element" method="post" action="<%= faqs_path %>">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input type="hidden" name="_method" value="" id="form-method">

            <div class="mb-3">
              <label for="faq_domanda" class="form-label">Domanda *</label>
              <input type="text" name="faq[domanda]" id="faq_domanda" class="form-control" placeholder="Inserisci la domanda" required>
            </div>

            <div class="mb-3">
              <label for="faq_risposta" class="form-label">Risposta *</label>
              <textarea name="faq[risposta]" id="faq_risposta" rows="4" class="form-control" placeholder="Inserisci la risposta" required></textarea>
            </div>

            <div class="mb-3">
              <label for="faq_categoria" class="form-label">Categoria *</label>
              <input type="text" name="faq[categoria]" id="faq_categoria" class="form-control" placeholder="Es. Iscrizioni, Segreteria, Esami" required>
            </div>

            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-primary" id="submit-btn">
                <i class="fas fa-save me-2"></i>
                Salva FAQ
              </button>

              <button type="button" class="btn btn-secondary" data-action="click->faqs-admin#closeForm">
                <i class="fas fa-times me-2"></i>
                Annulla
              </button>
            </div>
          </form>
        </div>
      </div>

      <% if @faqs.any? %>
        <div class="row">
          <% @faqs.each do |faq| %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card faq-card h-100">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <span class="category-badge"><%= faq.categoria %></span>

                    <div class="btn-group">
                      <button
                        type="button"
                        class="btn btn-outline-primary btn-sm"
                        data-action="click->faqs-admin#openEditForm"
                        data-faqs-admin-faq-id-param="<%= faq.id %>"
                        data-faqs-admin-domanda-param="<%= faq.domanda %>"
                        data-faqs-admin-risposta-param="<%= faq.risposta %>"
                        data-faqs-admin-categoria-param="<%= faq.categoria %>"
                        title="Modifica FAQ"
                      >
                        <i class="fas fa-edit"></i>
                      </button>

                      <%= link_to faq_path(faq),
                        data: { turbo_method: :delete, turbo_confirm: "Sei sicuro di voler eliminare questa FAQ?" },
                        class: "btn btn-outline-danger btn-sm",
                        title: "Elimina FAQ" do
                      %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    </div>
                  </div>

                  <h6 class="card-subtitle mb-2 text-primary"><%= faq.domanda %></h6>
                  <p class="card-text text-muted"><%= faq.risposta %></p>

                  <%= render "shared/faqs/votes", faq: faq, up_count: nil, down_count: nil, admin_mode: true %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-question-circle fa-3x text-muted mb-3"></i>
          <h4 class="text-muted">Nessuna FAQ disponibile</h4>
          <p class="text-muted">Aggiungi la prima FAQ cliccando sul pulsante "Aggiungi FAQ".</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>

<div
  class="modal fade"
  id="faqCategoryModal"
  tabindex="-1"
  aria-labelledby="faqCategoryModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="faqCategoryModalLabel">Categorie FAQ</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Chiudi"></button>
      </div>
      <div class="modal-body">
        <form action="#" method="post">
          <div class="mb-3">
            <label for="faq_category_name" class="form-label">Nuova categoria</label>
            <input
              id="faq_category_name"
              type="text"
              class="form-control"
              placeholder="Es. Iscrizioni, Segreteria, Esami"
            >
          </div>
          <div class="text-muted small fst-italic">
            UI pronta: collegheremo il salvataggio al database piu' avanti.
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Chiudi</button>
        <button type="button" class="btn btn-outline-primary" disabled>Salva categoria</button>
      </div>
    </div>
  </div>
</div>
