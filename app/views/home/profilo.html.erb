            color: white;
            padding: 2rem 0;
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .profile-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            padding: 2rem;
            margin-bottom: 2rem;
            border: none;
        }
        
        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid #fff;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            margin-bottom: 1rem;
        }
        
        .preference-item {
            display: flex;
            align-items: center;
            padding: 0.75rem;
            background: #f8f9fa;
            border-radius: 10px;
            margin-bottom: 0.5rem;
            transition: all 0.3s ease;
        }
        
        .preference-item:hover {
            background: #e9ecef;
            transform: translateX(5px);
        }
        
        .preference-item.active {
            background: #d4edda;
            border-left: 4px solid #28a745;
        }
        
        .route-item {
            background: #fff;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 0.75rem;
            transition: all 0.3s ease;
        }
        
        .route-item:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }
        
        .notification-item {
            background: #fff;
            border-left: 4px solid #17a2b8;
            border-radius: 5px;
            padding: 1rem;
            margin-bottom: 0.75rem;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .notification-item.unread {
            background: #e3f2fd;
            border-left-color: #2196f3;
        }
        
        .notification-item.important {
            border-left-color: #f44336;
            background: #ffebee;
        }
        
        .section-title {
