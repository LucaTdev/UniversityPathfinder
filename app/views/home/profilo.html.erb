    <script>
        <!-- Script per gestire gli switch delle preferenze -->
    document.querySelectorAll('.form-check-input').forEach(function(switchElement) {
        switchElement.addEventListener('change', function() {
            const preferenceItem = this.closest('.preference-item');
            const switchContainer = preferenceItem.querySelector('.form-check');
            
            if (this.checked) {
                preferenceItem.classList.add('active');
                <!-- Nasconde lo switch -->
                switchContainer.style.display = 'none';
                
                <!-- Crea icona di check se non esiste -->
                let checkIcon = preferenceItem.querySelector('.check-icon');
                if (!checkIcon) {
                    checkIcon = document.createElement('i');
                    checkIcon.className = 'fas fa-check-circle text-success check-icon';
                    checkIcon.style.cursor = 'pointer';
                    checkIcon.style.fontSize = '1.2rem';
                    
                    <!-- Riattiva lo switch -->
                    checkIcon.addEventListener('click', function() {
                        preferenceItem.classList.remove('active');
                        switchContainer.style.display = 'block';
                        switchElement.checked = false;
                        checkIcon.style.display = 'none';
                    });
                    
                    preferenceItem.appendChild(checkIcon);
                }
                checkIcon.style.display = 'inline-block';
                
            } else {
                preferenceItem.classList.remove('active');
                const checkIcon = preferenceItem.querySelector('.check-icon');
                if (checkIcon) {
                    checkIcon.style.display = 'none';
                }
                switchContainer.style.display = 'block';
            }
        });
    });

    // Animazione per le notifiche non lette
    document.querySelectorAll('.notification-item.unread').forEach(function(item) {
        item.addEventListener('click', function() {
            this.classList.remove('unread');
            this.style.background = '#fff';
        });
    });

    // Gestione hover per le route
