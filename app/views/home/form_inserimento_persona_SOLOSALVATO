<h1>Inserisci Persona</h1>

<%= form_with model: @persona, url: persone_index_path, local: true do |form| %>
  <div>
    <%= form.label :id %><br>
    <%= form.text_field :id %>
  </div>

  <div>
    <%= form.label :nome %><br>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :cognome %><br>
    <%= form.text_field :cognome %>
  </div>

  <div>
    <%= form.label :nascita, "Data di nascita" %><br>
    <%= form.date_field :nascita %>
  </div>

  <div>
    <%= form.submit "Salva" %>
  </div>
<% end %>

<h2>Persone registrate</h2>

<table border="1" cellpadding="5" cellspacing="0">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Cognome</th>
      <th>Data di nascita</th>
    </tr>
  </thead>
  <tbody>
    <% @persone.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.nome %></td>
        <td><%= p.cognome %></td>
        <td><%= p.nascita %></td>
      </tr>
    <% end %>
  </tbody>
</table>

